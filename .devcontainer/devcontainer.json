{
  "name": "Jekyll Portfolio",
  "dockerFile": "../Dockerfile",

  "forwardPorts": [4000],
  "portsAttributes": {
    "4000": {
      "label": "Jekyll Server",
      "onAutoForward": "notify"
    }
  },

  "postCreateCommand": "bundle install",

  "customizations": {
    "vscode": {
      "extensions": [
        "sissel.shopify-liquid",
        "yzhang.markdown-all-in-one"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  "remoteUser": "root"
}
